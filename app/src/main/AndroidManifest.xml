<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sportsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash"></activity>
        <activity android:name=".DetailActivity" />
        <activity android:name=".adapter.BundesAdapter" />
        <activity android:name=".adapter.LaligaAdapter" />
        <activity android:name=".viewholder.BundesViewHolder" />
        <activity android:name=".viewholder.LaligaViewHolder" />
        <activity android:name=".viewholder.PremierViewHolder" />
        <activity android:name=".adapter.PremierAdapter" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>